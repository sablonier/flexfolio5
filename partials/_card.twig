<div class="card" id="{{card.id}}">
    <div class="card-block" {% if card.previewbackground != 'rgba(255,255,255,1.0' %}style="background: {{ card.previewbackground }}"{% endif %}>
        <div>
        {% if card.previewimage.file != "" %}
            <a href="{{ card|link }}">
            {% set resimage = card.previewimage %}
            {% if settings.colsxl >= 3 %}
                {% include('partials/_resimage_25vw_33vw_50vw_100vw.twig') with { 'resimage' : resimage } %}
            {% else %}
                {% include('partials/_resimage_50vw_100vw.twig') with { 'resimage' : resimage } %}
            {% endif %}
            </a>
        {% endif %}
        </div>
        {% if settings.showtitleindex == true && settings.showtitlepages == true %}
        <div class="card-text my-2 {% if card.previewbackground != 'rgba(255,255,255,1.0' && card.previewbackground != '' %}px-2{% endif %}">
            {{ card.previewtext }}
            <a href="{{ card|link }}">{{ card.title }}</a>
        </div>
        {% endif %}
    </div>
</div>
